# ===========================
# 数据库配置
# ===========================
# MySQL数据库连接配置
DB_HOST=localhost           # 数据库主机地址
DB_PORT=3306               # 数据库端口号
DB_USER=your_db_user       # 数据库用户名
DB_PASSWORD=your_db_password # 数据库密码
DB_DATABASE=vps_deals      # 数据库名称
DB_CONNECTION_LIMIT=10     # 数据库连接池大小
DB_QUEUE_LIMIT=0          # 数据库请求队列限制（0表示无限制）
DB_WAIT_FOR_CONNECTIONS=true # 当连接池满时是否等待
DB_CHARSET=utf8mb4        # 数据库字符集

# ===========================
# JWT认证配置
# ===========================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production # JWT密钥（生产环境必须修改）
JWT_EXPIRES_IN=7d         # JWT过期时间（例如：1h, 7d, 30d）

# ===========================
# 管理员配置
# ===========================
ADMIN_USERNAME=admin                    # 管理员用户名
ADMIN_PASSWORD=your-secure-admin-password # 管理员密码（建议使用强密码）

# ===========================
# API配置
# ===========================
NUXT_PUBLIC_API_BASE=http://localhost:3000 # 前端API基础地址

# ===========================
# 服务器配置
# ===========================
SERVER_PORT=3001          # 后端服务器端口
NODE_ENV=development      # 运行环境（development/production/test）

# ===========================
# Redis缓存配置（可选）
# ===========================
REDIS_HOST=localhost      # Redis主机地址
REDIS_PORT=6379          # Redis端口号
REDIS_PASSWORD=          # Redis密码（如果没有密码请留空）
REDIS_DB=0              # Redis数据库索引（0-15）
REDIS_KEY_PREFIX=vps_   # Redis键前缀
REDIS_TTL=3600         # Redis默认过期时间（秒）

# ===========================
# 会话配置
# ===========================
SESSION_SECRET=your-session-secret-key # 会话密钥
SESSION_MAX_AGE=86400000              # 会话过期时间（毫秒，默认24小时）
SESSION_NAME=vps_session              # 会话Cookie名称

# ===========================
# CORS跨域配置
# ===========================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001 # 允许的跨域来源（多个用逗号分隔）

# ===========================
# 速率限制配置
# ===========================
RATE_LIMIT_WINDOW_MS=900000  # 速率限制时间窗口（毫秒，默认15分钟）
RATE_LIMIT_MAX_REQUESTS=100  # 时间窗口内最大请求数

# ===========================
# 邮件配置（可选）
# ===========================
SMTP_HOST=smtp.example.com    # SMTP服务器地址
SMTP_PORT=587                 # SMTP端口（587为TLS，465为SSL）
SMTP_SECURE=false             # 是否使用SSL（true/false）
SMTP_USER=your-email@example.com # SMTP用户名
SMTP_PASS=your-email-password    # SMTP密码
SMTP_FROM=noreply@example.com    # 发件人地址
SMTP_FROM_NAME=VPS Deals         # 发件人名称

# ===========================
# 日志配置
# ===========================
LOG_LEVEL=info               # 日志级别（error/warn/info/debug）
LOG_FILE_PATH=./logs/app.log # 日志文件路径
LOG_MAX_SIZE=10m            # 日志文件最大大小
LOG_MAX_FILES=30d           # 日志文件保留时间

# ===========================
# 安全配置
# ===========================
ENCRYPTION_KEY=your-encryption-key-32-characters # 加密密钥（必须是32个字符）
BCRYPT_ROUNDS=10           # 密码加密轮数

# ===========================
# SEO优化配置
# ===========================
SITE_URL=https://your-domain.com     # 网站URL
SITE_NAME=VPS Deals                  # 网站名称
SITE_DESCRIPTION=发现最优惠的VPS主机方案 # 网站描述
SITE_KEYWORDS=VPS,虚拟专用服务器,云主机,服务器优惠 # 网站关键词

# ===========================
# 数据分析配置（可选）
# ===========================
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X   # Google Analytics ID
BAIDU_ANALYTICS_ID=                  # 百度统计ID

# ===========================
# CDN配置（可选）
# ===========================
CDN_URL=https://cdn.your-domain.com  # CDN地址
CDN_ENABLED=false                    # 是否启用CDN

# ===========================
# 备份配置
# ===========================
BACKUP_PATH=/path/to/backups         # 备份文件存储路径
BACKUP_RETENTION_DAYS=30             # 备份保留天数
BACKUP_CRON_SCHEDULE=0 2 * * *      # 备份定时任务（每天凌晨2点）

# ===========================
# 文件上传配置
# ===========================
UPLOAD_MAX_FILE_SIZE=10485760        # 最大上传文件大小（字节，默认10MB）
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,webp # 允许的文件类型
UPLOAD_PATH=./uploads                # 上传文件存储路径

# ===========================
# 爬虫配置
# ===========================
CRAWLER_USER_AGENT=VPS-Deals-Bot/1.0 # 爬虫User-Agent
CRAWLER_TIMEOUT=30000                # 爬虫超时时间（毫秒）
CRAWLER_RETRY_TIMES=3                # 爬虫重试次数